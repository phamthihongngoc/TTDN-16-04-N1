<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Form View -->
    <record id="view_khach_hang_form" model="ir.ui.view">
        <field name="name">khach_hang.form</field>
        <field name="model">khach_hang</field>
        <field name="arch" type="xml">
            <form string="Khách hàng">
                <header>
                    <button name="action_chuyen_trang_thai_giao_dich" string="Chuyển sang Đang giao dịch" 
                            type="object" class="oe_highlight" 
                            attrs="{'invisible': [('trang_thai', '!=', 'moi')]}"/>
                    <button name="action_gui_email" string="Gửi Email" type="object" icon="fa-envelope"/>
                    <field name="trang_thai" widget="statusbar" statusbar_visible="moi,dang_giao_dich,cu"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="ten_khach_hang" placeholder="Tên khách hàng..."/>
                        </h1>
                        <h3>
                            <field name="cong_ty" placeholder="Tên công ty (nếu có)..."/>
                        </h3>
                    </div>
                    
                    <group>
                        <group string="Thông tin liên hệ">
                            <field name="so_dien_thoai" widget="phone"/>
                            <field name="email" widget="email"/>
                            <field name="dia_chi" placeholder="Địa chỉ chi tiết..."/>
                        </group>
                        <group string="Phân loại &amp; Quản lý">
                            <field name="phan_loai" widget="badge"/>
                            <field name="nhan_vien_phu_trach_id"/>
                            <field name="ten_nhan_vien_phu_trach" readonly="1" attrs="{'invisible': [('ten_nhan_vien_phu_trach', '=', False)]}"/>
                            <field name="phong_ban_nhan_vien_phu_trach" readonly="1" attrs="{'invisible': [('phong_ban_nhan_vien_phu_trach', '=', False)]}"/>
                            <field name="ngay_tao"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Thống kê">
                            <field name="so_lan_mua_hang"/>
                            <field name="tong_chi_tieu" widget="monetary"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Đơn hàng" name="don_hang">
                            <field name="don_hang_ids">
                                <tree decoration-success="trang_thai=='hoan_thanh'"
                                      decoration-warning="trang_thai=='dang_xu_ly'"
                                      decoration-danger="trang_thai=='huy'">
                                    <field name="ma_don_hang"/>
                                    <field name="ngay_dat_hang"/>
                                    <field name="tong_tien" sum="Tổng" widget="monetary"/>
                                    <field name="trang_thai" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Hỗ trợ" name="ho_tro">
                            <field name="ho_tro_ids">
                                <tree decoration-success="trang_thai=='hoan_thanh'"
                                      decoration-info="trang_thai=='dang_xu_ly'">
                                    <field name="ten_yeu_cau"/>
                                    <field name="phuong_thuc"/>
                                    <field name="nhan_vien_id"/>
                                    <field name="ngay_tao"/>
                                    <field name="trang_thai" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Email đã nhận" name="email">
                            <field name="email_ids">
                                <tree>
                                    <field name="chu_de"/>
                                    <field name="ngay_gui"/>
                                    <field name="trang_thai" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_khach_hang_tree" model="ir.ui.view">
        <field name="name">khach_hang.tree</field>
        <field name="model">khach_hang</field>
        <field name="arch" type="xml">
            <tree string="Khách hàng" decoration-info="phan_loai=='tiem_nang_cao'"
                  decoration-muted="trang_thai=='cu'">
                <field name="ten_khach_hang" decoration-bf="1"/>
                <field name="so_dien_thoai"/>
                <field name="email"/>
                <field name="cong_ty" optional="show"/>
                <field name="phan_loai" widget="badge"/>
                <field name="trang_thai" widget="badge"/>
                <field name="nhan_vien_phu_trach_id"/>
                <field name="so_lan_mua_hang"/>
                <field name="tong_chi_tieu" sum="Tổng" widget="monetary"/>
                <field name="ngay_tao" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_khach_hang_kanban" model="ir.ui.view">
        <field name="name">khach_hang.kanban</field>
        <field name="model">khach_hang</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="phan_loai">
                <field name="id"/>
                <field name="ten_khach_hang"/>
                <field name="so_dien_thoai"/>
                <field name="email"/>
                <field name="phan_loai"/>
                <field name="trang_thai"/>
                <field name="tong_chi_tieu"/>
                <field name="mau_sac"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.mau_sac.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><span><field name="ten_khach_hang"/></span></strong>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="so_dien_thoai" widget="phone"/>
                                    </div>
                                </div>
                                <span class="badge badge-pill" t-att-class="record.phan_loai.raw_value == 'tiem_nang_cao' ? 'badge-success' : 'badge-secondary'">
                                    <field name="phan_loai"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="email" widget="email"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="trang_thai" widget="label_selection" options="{&quot;classes&quot;: {&quot;moi&quot;: &quot;info&quot;, &quot;dang_giao_dich&quot;: &quot;success&quot;, &quot;cu&quot;: &quot;default&quot;}}"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="tong_chi_tieu" widget="monetary"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_khach_hang_search" model="ir.ui.view">
        <field name="name">khach_hang.search</field>
        <field name="model">khach_hang</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm khách hàng">
                <field name="ten_khach_hang"/>
                <field name="so_dien_thoai"/>
                <field name="email"/>
                <field name="cong_ty"/>
                <field name="nhan_vien_phu_trach_id"/>
                
                <filter string="Khách hàng mới" name="moi" domain="[('trang_thai', '=', 'moi')]"/>
                <filter string="Đang giao dịch" name="dang_giao_dich" domain="[('trang_thai', '=', 'dang_giao_dich')]"/>
                <separator/>
                <filter string="Tiềm năng cao" name="tiem_nang_cao" domain="[('phan_loai', '=', 'tiem_nang_cao')]"/>
                <filter string="Đã mua hàng" name="da_mua" domain="[('so_lan_mua_hang', '>', 0)]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                
                <group expand="0" string="Nhóm theo">
                    <filter string="Trạng thái" name="group_trang_thai" context="{'group_by':'trang_thai'}"/>
                    <filter string="Phân loại" name="group_phan_loai" context="{'group_by':'phan_loai'}"/>
                    <filter string="Nhân viên phụ trách" name="group_nhan_vien" context="{'group_by':'nhan_vien_phu_trach_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_khach_hang" model="ir.actions.act_window">
        <field name="name">Khách hàng</field>
        <field name="res_model">khach_hang</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_khach_hang_search"/>
        <field name="context">{'search_default_dang_giao_dich': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo khách hàng mới
            </p>
            <p>
                Quản lý thông tin khách hàng, theo dõi lịch sử mua hàng và hỗ trợ.
            </p>
        </field>
    </record>

</odoo>
