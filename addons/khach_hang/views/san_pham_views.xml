<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Form View -->
    <record id="view_san_pham_form" model="ir.ui.view">
        <field name="name">san_pham.form</field>
        <field name="model">san_pham</field>
        <field name="arch" type="xml">
            <form string="Sản phẩm">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="%(action_don_hang)d" type="action" 
                                icon="fa-shopping-cart" context="{'search_default_san_pham_id': active_id}">
                            <field string="Đã bán" name="so_luong_da_ban" widget="statinfo"/>
                        </button>
                    </div>
                    
                    <field name="hinh_anh" widget="image" class="oe_avatar"/>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="ten_san_pham" placeholder="Tên sản phẩm..."/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Thông tin cơ bản">
                            <field name="ma_san_pham"/>
                            <field name="loai_san_pham"/>
                            <field name="don_gia" widget="monetary"/>
                        </group>
                        <group string="Kho &amp; Bảo hành">
                            <field name="so_luong_ton_kho"/>
                            <field name="thoi_gian_bao_hanh"/>
                            <field name="tong_gia_tri_kho" widget="monetary"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Thống kê bán hàng">
                            <field name="so_luong_da_ban"/>
                            <field name="doanh_thu" widget="monetary"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Mô tả">
                            <field name="mo_ta" placeholder="Mô tả chi tiết sản phẩm..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_san_pham_tree" model="ir.ui.view">
        <field name="name">san_pham.tree</field>
        <field name="model">san_pham</field>
        <field name="arch" type="xml">
            <tree string="Sản phẩm" decoration-danger="so_luong_ton_kho &lt; 5">
                <field name="ma_san_pham"/>
                <field name="ten_san_pham"/>
                <field name="loai_san_pham"/>
                <field name="don_gia" sum="Tổng giá"/>
                <field name="so_luong_ton_kho" sum="Tổng tồn"/>
                <field name="so_luong_da_ban" sum="Tổng đã bán"/>
                <field name="doanh_thu" sum="Tổng doanh thu"/>
            </tree>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_san_pham_kanban" model="ir.ui.view">
        <field name="name">san_pham.kanban</field>
        <field name="model">san_pham</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="ten_san_pham"/>
                <field name="don_gia"/>
                <field name="so_luong_ton_kho"/>
                <field name="so_luong_da_ban"/>
                <field name="hinh_anh"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('san_pham', 'hinh_anh', record.id.raw_value)" alt="Product"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong><field name="ten_san_pham"/></strong>
                                <ul>
                                    <li>Giá: <field name="don_gia" widget="monetary"/></li>
                                    <li>Tồn kho: <field name="so_luong_ton_kho"/></li>
                                    <li>Đã bán: <field name="so_luong_da_ban"/></li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_san_pham_search" model="ir.ui.view">
        <field name="name">san_pham.search</field>
        <field name="model">san_pham</field>
        <field name="arch" type="xml">
            <search>
                <field name="ten_san_pham"/>
                <field name="ma_san_pham"/>
                <field name="loai_san_pham"/>
                
                <filter string="Tồn kho thấp" name="ton_kho_thap" domain="[('so_luong_ton_kho', '&lt;', 5)]"/>
                <filter string="Hết hàng" name="het_hang" domain="[('so_luong_ton_kho', '=', 0)]"/>
                
                <group expand="0" string="Nhóm theo">
                    <filter string="Loại sản phẩm" name="group_loai" context="{'group_by':'loai_san_pham'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_san_pham" model="ir.actions.act_window">
        <field name="name">Sản phẩm</field>
        <field name="res_model">san_pham</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_san_pham_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo sản phẩm mới
            </p>
        </field>
    </record>

</odoo>
