<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- Category -->
        <record id="module_category_khach_hang" model="ir.module.category">
            <field name="name">Quản lý khách hàng</field>
            <field name="description">Phân quyền cho module quản lý khách hàng</field>
            <field name="sequence">16</field>
        </record>

        <!-- Groups -->
        <record id="group_khach_hang_user" model="res.groups">
            <field name="name">Nhân viên Khách hàng</field>
            <field name="category_id" ref="module_category_khach_hang"/>
            <field name="comment">Xem và chỉnh sửa khách hàng được phân công</field>
        </record>

        <record id="group_khach_hang_manager" model="res.groups">
            <field name="name">Quản lý Khách hàng</field>
            <field name="category_id" ref="module_category_khach_hang"/>
            <field name="implied_ids" eval="[(4, ref('group_khach_hang_user'))]"/>
            <field name="comment">Quản lý tất cả khách hàng và phân công</field>
        </record>

        <!-- Record Rules: Khách hàng -->
        <record id="khach_hang_rule_user" model="ir.rule">
            <field name="name">Khách hàng: Nhân viên chỉ xem KH được phân công</field>
            <field name="model_id" ref="model_khach_hang"/>
            <field name="domain_force">[('nhan_vien_phu_trach_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_khach_hang_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="khach_hang_rule_manager" model="ir.rule">
            <field name="name">Khách hàng: Quản lý xem tất cả</field>
            <field name="model_id" ref="model_khach_hang"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_khach_hang_manager'))]"/>
        </record>

        <!-- Record Rules: Hỗ trợ -->
        <record id="ho_tro_rule_user" model="ir.rule">
            <field name="name">Hỗ trợ: Nhân viên chỉ xem hỗ trợ của mình</field>
            <field name="model_id" ref="model_ho_tro_khach_hang"/>
            <field name="domain_force">[('nhan_vien_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_khach_hang_user'))]"/>
        </record>

        <record id="ho_tro_rule_manager" model="ir.rule">
            <field name="name">Hỗ trợ: Quản lý xem tất cả</field>
            <field name="model_id" ref="model_ho_tro_khach_hang"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_khach_hang_manager'))]"/>
        </record>

        <!-- Sequence cho đơn hàng -->
        <record id="seq_don_hang" model="ir.sequence">
            <field name="name">Đơn hàng</field>
            <field name="code">don_hang</field>
            <field name="prefix">DH</field>
            <field name="padding">5</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>

    </data>
</odoo>
