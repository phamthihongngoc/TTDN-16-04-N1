<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_van_ban_signature_log_tree" model="ir.ui.view">
        <field name="name">van_ban.signature.log.tree</field>
        <field name="model">van_ban.signature.log</field>
        <field name="arch" type="xml">
            <tree string="Lịch sử ký điện tử" default_order="signed_at desc">
                <field name="signed_at"/>
                <field name="user_id"/>
                <field name="nhan_vien_id"/>
                <field name="is_valid" widget="boolean"/>
                <field name="invalid_reason"/>
                <field name="blockchain_tx_hash"/>
                <field name="ip_address"/>
            </tree>
        </field>
    </record>

    <record id="view_van_ban_signature_log_form" model="ir.ui.view">
        <field name="name">van_ban.signature.log.form</field>
        <field name="model">van_ban.signature.log</field>
        <field name="arch" type="xml">
            <form string="Lịch sử ký điện tử">
                <sheet>
                    <group>
                        <group>
                            <field name="signed_at"/>
                            <field name="user_id"/>
                            <field name="nhan_vien_id"/>
                            <field name="ip_address"/>
                        </group>
                        <group>
                            <field name="is_valid"/>
                            <field name="invalid_reason" attrs="{'invisible': [('is_valid', '=', True)]}"/>
                            <field name="blockchain_tx_hash" attrs="{'invisible': [('blockchain_tx_hash', '=', False)]}"/>
                            <field name="file_sha256" attrs="{'invisible': [('file_sha256', '=', False)]}"/>
                        </group>
                    </group>
                    <group>
                        <group string="Xác minh họ tên">
                            <field name="signer_name_expected"/>
                            <field name="signer_name_entered"/>
                        </group>
                        <group string="Chữ ký">
                            <field name="signature_image" widget="image" options="{'size': [300, 100]}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_van_ban_signature_log" model="ir.actions.act_window">
        <field name="name">Lịch sử ký điện tử</field>
        <field name="res_model">van_ban.signature.log</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Chưa có lịch sử ký.</p>
        </field>
    </record>
</odoo>
