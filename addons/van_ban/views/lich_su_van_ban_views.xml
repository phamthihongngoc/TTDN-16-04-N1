<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Tree View -->
    <record id="view_lich_su_van_ban_tree" model="ir.ui.view">
        <field name="name">lich_su_van_ban.tree</field>
        <field name="model">lich_su_van_ban</field>
        <field name="arch" type="xml">
            <tree string="Lịch sử văn bản" create="0" edit="0" delete="0">
                <field name="thoi_gian"/>
                <field name="van_ban_id"/>
                <field name="hanh_dong" widget="badge"/>
                <field name="mo_ta"/>
                <field name="nguoi_thuc_hien_id"/>
                <field name="ip_address"/>
            </tree>
        </field>
    </record>

    <!-- Form View (readonly) -->
    <record id="view_lich_su_van_ban_form" model="ir.ui.view">
        <field name="name">lich_su_van_ban.form</field>
        <field name="model">lich_su_van_ban</field>
        <field name="arch" type="xml">
            <form string="Chi tiết lịch sử" create="0" edit="0" delete="0">
                <sheet>
                    <group>
                        <group>
                            <field name="thoi_gian"/>
                            <field name="van_ban_id"/>
                            <field name="hanh_dong"/>
                        </group>
                        <group>
                            <field name="nguoi_thuc_hien_id"/>
                            <field name="ip_address"/>
                        </group>
                    </group>
                    <group>
                        <field name="mo_ta"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_lich_su_van_ban_search" model="ir.ui.view">
        <field name="name">lich_su_van_ban.search</field>
        <field name="model">lich_su_van_ban</field>
        <field name="arch" type="xml">
            <search>
                <field name="van_ban_id"/>
                <field name="nguoi_thuc_hien_id"/>
                <field name="hanh_dong"/>
                
                <filter string="Hôm nay" name="today" domain="[('thoi_gian', '>=', datetime.datetime.combine(context_today(), datetime.time(0,0,0)))]"/>
                <filter string="7 ngày qua" name="last_7_days" domain="[('thoi_gian', '>=', (context_today() - relativedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                
                <group expand="0" string="Nhóm theo">
                    <filter string="Hành động" name="group_hanh_dong" context="{'group_by':'hanh_dong'}"/>
                    <filter string="Văn bản" name="group_van_ban" context="{'group_by':'van_ban_id'}"/>
                    <filter string="Người thực hiện" name="group_nguoi" context="{'group_by':'nguoi_thuc_hien_id'}"/>
                    <filter string="Ngày" name="group_ngay" context="{'group_by':'thoi_gian:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_lich_su_van_ban" model="ir.actions.act_window">
        <field name="name">Lịch sử văn bản</field>
        <field name="res_model">lich_su_van_ban</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_lich_su_van_ban_search"/>
        <field name="context">{'search_default_today': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                Chưa có lịch sử nào
            </p>
        </field>
    </record>

</odoo>
