<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Form View -->
    <record id="view_loai_van_ban_form" model="ir.ui.view">
        <field name="name">loai_van_ban.form</field>
        <field name="model">loai_van_ban</field>
        <field name="arch" type="xml">
            <form string="Loại văn bản">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="ten_loai" placeholder="Tên loại văn bản..."/>
                        </h1>
                        <h3>
                            <field name="ma_loai" placeholder="Mã loại (VD: HD, BG)"/>
                        </h3>
                    </div>
                    
                    <group>
                        <group string="Thông tin">
                            <field name="thu_tu"/>
                            <field name="active"/>
                            <field name="so_van_ban"/>
                        </group>
                        <group string="Cấu hình Workflow">
                            <field name="yeu_cau_duyet"/>
                            <field name="yeu_cau_ky"/>
                            <field name="cho_phep_khach_ky"/>
                        </group>
                    </group>
                    
                    <group>
                        <field name="mo_ta" placeholder="Mô tả loại văn bản..."/>
                    </group>
                    
                    <group string="Mẫu văn bản">
                        <field name="mau_van_ban" filename="ten_file_mau"/>
                        <field name="ten_file_mau"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_loai_van_ban_tree" model="ir.ui.view">
        <field name="name">loai_van_ban.tree</field>
        <field name="model">loai_van_ban</field>
        <field name="arch" type="xml">
            <tree string="Loại văn bản">
                <field name="thu_tu" widget="handle"/>
                <field name="ma_loai"/>
                <field name="ten_loai"/>
                <field name="yeu_cau_duyet"/>
                <field name="yeu_cau_ky"/>
                <field name="cho_phep_khach_ky"/>
                <field name="so_van_ban"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="action_loai_van_ban" model="ir.actions.act_window">
        <field name="name">Loại văn bản</field>
        <field name="res_model">loai_van_ban</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo loại văn bản mới
            </p>
        </field>
    </record>

</odoo>
